<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wallpaper"
    tools:context=".dataClub">



    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tahun_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:text="1720"
            android:textColor="#ffff"
            android:textStyle="bold" />

            <ImageView
                android:id="@+id/logo_team"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo"/>


        <Button
            android:layout_width="wrap_content"
            android:id="@+id/btnFavourite"
            android:background="#bdbdbd"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content"
            android:text="Favourite"
            />
    </LinearLayout>

    <TextView
        android:textColor="#fff"
        android:id="@+id/name_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Nama Team"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">




        <TextView
            android:id="@+id/web"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="teamWeb" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="450dp"
        app:cardBackgroundColor="#585959"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Team Jersey"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/jersey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/logo" />
    </androidx.cardview.widget.CardView>
</LinearLayout>